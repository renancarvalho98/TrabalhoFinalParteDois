@model IEnumerable<TrabalhoFinalWeb.Models.DetalheOrcamento>

@{
    ViewBag.Title = "Index";
}

<h2>Detalhes dos orçamentos</h2>

<p>
    @Html.ActionLink("Adicionar detalhe", "AdicionaDetalhe")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IdDetalhe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdProduto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Qtd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustoTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdOrcamento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.IdDetalhe)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IdProduto)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Qtd)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.CustoTotal)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IdOrcamento)
    </td>
    <td>
        @Html.ActionLink("Deletar", "DeletaDetalhe", new { id = item.IdDetalhe },
            new { onclick = "return confirm('Deseja realmente deletar esse detalhe?');" })
    </td>
</tr>
}

</table>
